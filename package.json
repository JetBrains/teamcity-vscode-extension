{
  "name": "teamcity-vscode-extension",
  "displayName": "teamcity-vscode-extension",
  "description": "TeamCity integrarion for VSCode",
  "version": "0.0.2",
  "publisher": "rugpanov",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rugpanov/teamcity-vscode-extension.git"
  },
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "teamcity.signIn",
        "title": "Signin",
        "category": "TeamCity"
      },
      {
        "command": "teamcity.signOut",
        "title": "Signout",
        "category": "TeamCity"
      },
      {
        "command": "teamcity.selectFilesForRemoteRun",
        "title": "Remote Run. Select Files For Remote Run",
        "category": "TeamCity",
        "icon": {
          "light": "resources/icons/light/remoterun.png",
          "dark": "resources/icons/light/remoterun.png"
        }
      },
      {
        "command": "teamcity.findSuitableBuildConfigurations",
        "title": "Remote Run. Find Suitable Build Configurations",
        "category": "TeamCity",
        "icon": {
          "light": "resources/icons/light/findsuitable.png",
          "dark": "resources/icons/light/findsuitable.png"
        }
      },
      {
        "command": "teamcity.remoteRun",
        "title": "Remote Run. Run With Chosen Build Configurations",
        "category": "TeamCity",
        "icon": {
          "light": "resources/icons/light/remoterun.png",
          "dark": "resources/icons/light/remoterun.png"
        }
      },
      {
        "command": "teamcity.showOutput",
        "title": "Show TeamCity Output",
        "category": "TeamCity"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "teamcityEmptyExplorer",
          "name": "TeamCity",
          "when": "teamcity-explorer == EmptyDataProvider"
        },
        {
          "id": "teamcityResourceExplorer",
          "name": "TeamCity",
          "when": "teamcity-explorer == ResourcesProvider"
        },
        {
          "id": "teamcityBuildsExplorer",
          "name": "TeamCity",
          "when": "teamcity-explorer == BuildsProvider"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "teamcity.selectFilesForRemoteRun",
          "when": "view == teamcityEmptyExplorer",
          "group": "navigation@1"
        },
        {
          "command": "teamcity.selectFilesForRemoteRun",
          "when": "view == teamcityResourceExplorer",
          "group": "navigation@1"
        },
        {
          "command": "teamcity.findSuitableBuildConfigurations",
          "when": "view == teamcityResourceExplorer",
          "group": "navigation@1"
        },
        {
          "command": "teamcity.findSuitableBuildConfigurations",
          "when": "view == teamcityBuildsExplorer",
          "group": "navigation@1"
        },
        {
          "command": "teamcity.remoteRun",
          "when": "view == teamcityBuildsExplorer",
          "group": "navigation@1"
        },
        {
          "command": "teamcity.signIn",
          "when": "view == teamcityBuildsExplorer",
          "group": "@1"
        },
        {
          "command": "teamcity.selectFilesForRemoteRun",
          "when": "view == teamcityBuildsExplorer",
          "group": "@2"
        },
        {
          "command": "teamcity.findSuitableBuildConfigurations",
          "when": "view == teamcityBuildsExplorer",
          "group": "@2"
        },
        {
          "command": "teamcity.remoteRun",
          "when": "view == teamcityBuildsExplorer",
          "group": "@2"
        },
        {
          "command": "teamcity.signOut",
          "when": "view == teamcityBuildsExplorer",
          "group": "@3"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "TeamCity extension options",
      "properties": {
        "teamcity.logging.level": {
          "type": "string",
          "description": "Set the logging level for the extension (error, warn, info, debug)."
        },
        "teamcity.show.welcome": {
          "type": "boolean",
          "default": true,
          "description": "Sets whether the extension should show welcome message after the login operation or not."
        },
        "teamcity.credentials.url": {
          "type": "string",
          "description": "Sets default url for the Signin operation."
        },
        "teamcity.credentials.username": {
          "type": "string",
          "description": "Sets default username for the Signin operation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "@types/xml2js": "^0.0.32",
    "chai": "^3.4.1",
    "electron-rebuild": "^1.6.0",
    "ts-mockito": "^2.1.1",
    "tslint": "^5.6.0",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "async-file": "^2.0.2",
    "child-process-promise": "^2.2.1",
    "inversify": "^4.3.0",
    "node-forge": "^0.7.1",
    "node-gyp": "^3.6.2",
    "pako": "^1.0.5",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "temp": "^0.8.3",
    "winston": "^2.3.1",
    "xml2js": "^0.4.17",
    "xmlhttprequest": "^1.8.0",
    "xmlrpc": "^1.3.2"
  }
}
